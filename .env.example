# Wazz Audio Shared Library - Environment Configuration Template
# Copy this file to .env and update with your actual values

# =========================================================================
# Application Settings
# =========================================================================
APP_NAME=Whazz Audio
DEBUG=true
ENVIRONMENT=development

# =========================================================================
# Database Settings - PostgreSQL
# =========================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/whazz_audio

# Or use individual settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=whazz_audio

# =========================================================================
# Message Broker - RabbitMQ
# =========================================================================
RABBITMQ_URL=amqp://guest:guest@localhost:5672//
CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
CELERY_RESULT_BACKEND=db+postgresql://postgres:postgres@localhost:5432/whazz_audio

# =========================================================================
# Object Storage - S3/MinIO
# =========================================================================
# Toggle between local filesystem and S3/MinIO
USE_LOCAL_STORAGE=true

# S3/MinIO Settings (used when USE_LOCAL_STORAGE=false)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=wazz-audio
S3_REGION=us-east-1
S3_USE_SSL=false

# For AWS S3 (production):
# S3_ENDPOINT_URL=
# S3_ACCESS_KEY=YOUR_AWS_ACCESS_KEY_ID
# S3_SECRET_KEY=YOUR_AWS_SECRET_ACCESS_KEY
# S3_BUCKET_NAME=wazz-audio-production
# S3_REGION=us-east-1
# S3_USE_SSL=true

# =========================================================================
# File Storage Settings
# =========================================================================
# Local storage paths (used when USE_LOCAL_STORAGE=true)
UPLOAD_DIR=./uploads
OUTPUT_DIR=./processed_audio

# File validation
MAX_FILE_SIZE_MB=100
FILE_EXPIRY_HOURS=24

# =========================================================================
# Audio Processing Settings
# =========================================================================
CLEARVOICE_MODEL_NAME=MossFormer2_SE_48K
PROCESSING_TIMEOUT_SECONDS=3600
WORKER_CONCURRENCY=2

# =========================================================================
# Security Settings (API Service)
# =========================================================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =========================================================================
# Email Settings (API Service)
# =========================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
FRONTEND_URL=http://localhost:5173
REQUIRE_EMAIL_VERIFICATION=true

# =========================================================================
# Logging Settings
# =========================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
